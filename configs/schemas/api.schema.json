{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "XPPMPolicyAPI",
  "type": "object",
  "properties": {
    "case_id": { "type": "string" },
    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "activity": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" },
          "amount": { "type": ["number", "null"] }
        },
        "required": ["activity", "timestamp"]
      }
    }
  },
  "required": ["case_id", "events"]
}


